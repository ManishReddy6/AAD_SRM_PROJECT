<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SecondTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/SecondPrimary</item>
        <item name="colorPrimaryDark">@color/SecondDark</item>
        <item name="colorAccent">@color/SecondAccent</item>
    </style>

    <color name="SecondPrimary">#FF5722</color>
    <color name="SecondDark">#FFEB3B</color>
    <color name="SecondAccent">#2196F3</color>
</resources>